<h1>Editing <%=singular_name%></h1>

<%% form_for @<%=singular_name%>, :bookmarker_url=>"/<%=plural_name%>/update/#{@<%=singular_name%>.id}" do |f| %>
  <%%= f.error_messages %>

  <p>
    <%%= f.label :bookmarker_url, 'URL'%><br />
    <%%= f.text_field :bookmarker_url %>
  </p>
  <p>
    <%%= f.label :title, '<%=singular_name%> Title'%><br />
    <%%= f.text_field :title %>
  </p>
  <p>
    <%%= f.label :description, 'Description' %><br />
    <%%= f.text_area :description %>
  </p>
  <p>
    <%%= f.submit "Update" %>
  </p>
<%% end %>

